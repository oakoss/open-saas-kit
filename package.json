{
  "name": "open-saas-kit",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook --filter=@oakoss/ui",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:generate": "turbo run db:generate --filter=@oakoss/database",
    "db:migrate": "turbo run db:migrate --filter=@oakoss/database",
    "db:push": "turbo run db:push --filter=@oakoss/database",
    "dev": "turbo run dev",
    "format": "prettier -uwl --cache .",
    "format:check": "prettier -uc --cache .",
    "postinstall": "pnpm run lint:ws",
    "lint": "turbo run lint //#lint:root",
    "lint:fix": "turbo run lint:fix //#lint:fix:root",
    "lint:fix:root": "eslint . --max-warnings 0 --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "lint:root": "eslint . --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:ws": "sherif",
    "start": "turbo run start",
    "storybook": "turbo run storybook --filter=@oakoss/ui",
    "test": "turbo run test --continue",
    "test:coverage": "turbo run test:coverage --continue",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@oakoss/eslint-config": "workspace:^",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "lefthook": "^2.0.15",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "sherif": "^1.10.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "engines": {
    "node": ">=24.13.0"
  }
}
