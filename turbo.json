{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "stream",
  "globalEnv": [
    "DATABASE_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NODE_ENV",
    "PROD",
    "SB_URL",
    "SESSION_SECRET",
    "SKIP_ENV_VALIDATION",
    "VITE_APP_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".vinxi/**", ".output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{ts,tsx,js,jsx,cjs,mjs}",
        "eslint.config.*",
        "!**/node_modules/**"
      ],
      "outputs": ["node_modules/.cache/eslint/**"]
    },
    "//#lint:root": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "*.{ts,tsx,js,jsx,cjs,mjs}",
        "eslint.config.*"
      ],
      "outputs": ["node_modules/.cache/eslint/**"]
    },
    "lint:fix": {
      "cache": false
    },
    "//#lint:fix:root": {
      "cache": false
    },
    "test": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/*.stories.{ts,tsx}",
        "vitest.config.*",
        "!**/node_modules/**"
      ]
    },
    "test:coverage": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/*.stories.{ts,tsx}",
        "vitest.config.*",
        "!**/node_modules/**"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.{ts,tsx}",
        "tsconfig*.json",
        "!**/node_modules/**"
      ],
      "outputs": ["node_modules/.cache/typescript/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
