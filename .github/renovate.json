{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "schedule": ["before 6am on the first day of the month"],
  "timezone": "America/Chicago",
  "ignorePaths": ["**/node_modules/**"],
  "packageRules": [
    {
      "description": "Widen peer dependency ranges",
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "description": "TanStack ecosystem",
      "groupName": "TanStack",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@tanstack//"]
    },
    {
      "description": "React ecosystem",
      "groupName": "React",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "React Aria Components",
      "groupName": "React Aria",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^react-aria/", "/^@react-aria//"]
    },
    {
      "description": "Tailwind CSS ecosystem",
      "groupName": "Tailwind CSS",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["/^tailwind/", "/^@tailwindcss//"]
    },
    {
      "description": "Storybook ecosystem",
      "groupName": "Storybook",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^@storybook//",
        "/^storybook/",
        "/^@chromatic-com//"
      ]
    },
    {
      "description": "Testing libraries",
      "groupName": "Testing",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^vitest/", "/^@vitest//", "/^@testing-library//"]
    },
    {
      "description": "ESLint ecosystem",
      "groupName": "ESLint",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^eslint/",
        "/^@eslint//",
        "/^@typescript-eslint//"
      ]
    },
    {
      "description": "Commitlint ecosystem",
      "groupName": "Commitlint",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@commitlint//"]
    },
    {
      "description": "Vite ecosystem",
      "groupName": "Vite",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["/^vite/", "/^@vitejs//"]
    },
    {
      "description": "Node.js types",
      "groupName": "Node Types",
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true
    },
    {
      "description": "TypeScript",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Prettier and plugins",
      "groupName": "Prettier",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^prettier/"]
    },
    {
      "description": "Drizzle ORM ecosystem",
      "groupName": "Drizzle",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["/^drizzle-/"]
    },
    {
      "description": "Better Auth",
      "groupName": "Better Auth",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["/^better-auth/"]
    },
    {
      "description": "Zod",
      "matchPackageNames": ["zod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Turbo",
      "matchPackageNames": ["turbo"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Lefthook",
      "matchPackageNames": ["lefthook"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Pin nitro nightly",
      "matchPackageNames": ["nitro"],
      "enabled": false
    },
    {
      "description": "Disable major updates automerge",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "schedule": ["at any time"]
  }
}
